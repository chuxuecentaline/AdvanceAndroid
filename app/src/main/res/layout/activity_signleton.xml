<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cherish.salehouse_kotlin.activity.pattern.SingletonActivity">
    <TextView
        android:id="@+id/tv_evil"
        android:layout_width="match_parent"
        android:text="饿汉模式"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_slacker"
        android:layout_width="match_parent"
        android:text="懒汉模式"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_dcl"
        android:layout_width="match_parent"
        android:text="DCL 同步锁模式"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_static_internal_class"
        android:layout_width="match_parent"
        android:text="静态内部类模式"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_enum"
        android:layout_width="match_parent"
        android:text="枚举模式"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_map"
        android:layout_width="match_parent"
        android:text="容器管理(系统服务使用的模式)"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_static_class"
        android:layout_width="match_parent"
        android:text="static（自成一派）"
        android:padding="10dp"
        android:gravity="center"
        android:elevation="3dp"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content" />

</LinearLayout>
